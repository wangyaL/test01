            android:name="com.android.test01.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.test01.StartActivity"
            android:label="@string/title_activity_start" >
        </activity>
        <activity
            android:name="com.android.test01.SelectCityActivity"
            android:label="@string/title_activity_select_city" >
        </activity>
        <activity
            android:name="com.android.test01.URLTestActivity"
            android:label="@string/title_activity_urltest" >
        </activity>
        <activity
            android:name="com.android.test01.MiniBrowser"
            android:label="@string/title_activity_mini_browser" >
        </activity>
        <activity
            android:name="com.android.webview.JsCallAndroid"
            android:label="@string/title_activity_js_call_android" >
        </activity>
    </application>

    <!-- 授权访问网络 -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
